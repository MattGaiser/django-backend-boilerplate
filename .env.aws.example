# Multi-Cloud Configuration Example for AWS
# Copy this to .env.aws for AWS deployments

# Cloud Provider Configuration
CLOUD_PROVIDER=aws
DJANGO_ENV=production

# Database Configuration (AWS RDS)
USE_POSTGRES=true
RDS_DB_NAME=django_prod_db
RDS_USERNAME=django_user
RDS_PASSWORD=your_secure_password_here
RDS_HOSTNAME=your-rds-endpoint.region.rds.amazonaws.com
RDS_PORT=5432
RDS_SSL_MODE=require

# Storage Configuration (AWS S3)
CLOUD_STORAGE_BUCKET_NAME=your-app-assets-bucket
CLOUD_STORAGE_USE_ORG_SCOPING=true
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
# Optional: For S3-compatible services
# AWS_S3_ENDPOINT_URL=https://s3.alternative-provider.com

# Authentication Providers
GOOGLE_OAUTH2_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH2_CLIENT_SECRET=your_google_client_secret
MICROSOFT_OAUTH2_CLIENT_ID=your_microsoft_client_id
MICROSOFT_OAUTH2_CLIENT_SECRET=your_microsoft_client_secret

# AWS Cognito (optional)
AWS_COGNITO_CLIENT_ID=your_cognito_client_id
AWS_COGNITO_CLIENT_SECRET=your_cognito_client_secret
AWS_COGNITO_DOMAIN=your-app.auth.region.amazoncognito.com

# Security
SECRET_KEY=your_django_secret_key_here
DEBUG=false
ALLOWED_HOSTS=your-domain.com,your-alb-endpoint.region.elb.amazonaws.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.cloudfront.net

# Prefect Configuration (can run on ECS or EC2)
PREFECT_API_URL=http://your-prefect-server:4200/api
PREFECT_SERVER_HOST=your-prefect-server
PREFECT_SERVER_PORT=4200