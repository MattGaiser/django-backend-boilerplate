# Multi-Cloud Configuration Example for Azure
# Copy this to .env.azure for Azure deployments

# Cloud Provider Configuration
CLOUD_PROVIDER=azure
DJANGO_ENV=production

# Database Configuration (Azure Database for PostgreSQL)
USE_POSTGRES=true
AZURE_DB_NAME=django_prod_db
AZURE_DB_USER=django_user@your-server
AZURE_DB_PASSWORD=your_secure_password_here
AZURE_DB_HOST=your-server.postgres.database.azure.com
AZURE_DB_PORT=5432
AZURE_DB_SSL_MODE=require

# Storage Configuration (Azure Blob Storage)
CLOUD_STORAGE_BUCKET_NAME=your-app-assets-container
CLOUD_STORAGE_USE_ORG_SCOPING=true
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
# Alternative: Use connection string
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# Or SAS token
# AZURE_STORAGE_SAS_TOKEN=your_sas_token

# Authentication Providers
GOOGLE_OAUTH2_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH2_CLIENT_SECRET=your_google_client_secret
MICROSOFT_OAUTH2_CLIENT_ID=your_microsoft_client_id
MICROSOFT_OAUTH2_CLIENT_SECRET=your_microsoft_client_secret

# Azure Active Directory (native integration)
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# Azure Key Vault (for secrets management)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your_service_principal_client_id
AZURE_CLIENT_SECRET=your_service_principal_secret

# Security
SECRET_KEY=your_django_secret_key_here
DEBUG=false
ALLOWED_HOSTS=your-domain.com,your-app.azurewebsites.net

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.azureedge.net

# Prefect Configuration (can run on Azure Container Instances)
PREFECT_API_URL=http://your-prefect-server:4200/api
PREFECT_SERVER_HOST=your-prefect-server
PREFECT_SERVER_PORT=4200