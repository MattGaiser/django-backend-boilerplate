# Multi-Cloud Configuration Example for GCP (Updated)
# Copy this to .env.gcp for GCP deployments

# Cloud Provider Configuration
CLOUD_PROVIDER=gcp
DJANGO_ENV=production

# Database Configuration (Google Cloud SQL)
USE_POSTGRES=true
POSTGRES_DB=django_prod_db
POSTGRES_USER=django_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=/cloudsql/your-project:region:instance-name
POSTGRES_PORT=5432
POSTGRES_SSL_MODE=prefer

# Storage Configuration (Google Cloud Storage)
CLOUD_STORAGE_BUCKET_NAME=your-app-assets-bucket
CLOUD_STORAGE_USE_ORG_SCOPING=true
USE_GCS_EMULATOR=false
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Authentication Providers
GOOGLE_OAUTH2_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH2_CLIENT_SECRET=your_google_client_secret
MICROSOFT_OAUTH2_CLIENT_ID=your_microsoft_client_id
MICROSOFT_OAUTH2_CLIENT_SECRET=your_microsoft_client_secret

# Azure AD (cross-cloud compatibility)
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret

# Security
SECRET_KEY=your_django_secret_key_here
DEBUG=false
ALLOWED_HOSTS=your-domain.com,your-service-hash-region.run.app

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app.web.app

# Prefect Configuration (runs on Cloud Run)
PREFECT_API_URL=http://your-prefect-server:4200/api
PREFECT_SERVER_HOST=your-prefect-server
PREFECT_SERVER_PORT=4200